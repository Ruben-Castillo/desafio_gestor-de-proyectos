<p id="notice"><%= notice %></p>

<h1>Projects</h1>

<%= form_with(url: projects_path, local: true, method: :get) do |form| %>

  <div class="field">
    <%= form.label :status %>
    <%= form.select :status, options_for_select([nil,'Propuesta','En Progreso', 'Terminado']) %>
  </div>

  <div class="actions">
    <%= form.submit 'Filtrar' %> 
  </div>

<% end %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.name %></td>
        <td><%= project.description %></td>
        <td><%= project.start_date %></td>
        <td><%= project.end_date %></td>
        <td><%= project.status %></td>
        <td><%= link_to 'Show', project %></td>
        <td><%= link_to 'Edit', edit_project_path(project) %></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Project', new_project_path %>
